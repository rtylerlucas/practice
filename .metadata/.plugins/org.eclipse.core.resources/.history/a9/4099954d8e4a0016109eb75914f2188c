package chapter.eight;

public class EightDotTwo {
	
	private EightDotTwo(){}
	
	class Node{
		int data;
		Node next;
		Node(int data){
			this.data = data;
			this.next = null;
		}
		Node(int data, Node node){
			this.data = data;
			this.next = node;
		}
	}
	
	/*
	 * Return the new head node
	 */
	public Node reverseSingleLL(Node head){
		
		if(head == null || head.next == null){
			return head;
		}
		
		Node prev = null;
		Node curr = head;
		Node next = null;
		
		while(curr!=null){
			
			next = curr.next;
			curr.next = prev;
			prev = curr;
			curr = next;
			
		}
		return prev;
	}
	
	public static void main(String[] args){
		Node one = new Node(1);
		Node two = new Node(2);
	}

}
