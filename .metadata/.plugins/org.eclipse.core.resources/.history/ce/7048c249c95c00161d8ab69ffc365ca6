    }
    //recursive bSearch Impl
    public static int recursiveBSearch(int k, int[] arr, int s, int e){

        int middleIndex = e + (s - e) / 2;
        if(arr[middleIndex] == k){
            return middleIndex;
        }
        if( arr[middleIndex] > k ){
            return bSearch(k, arr, s, middleIndex);
        }
        else{
           return bSearch(k, arr, middleIndex + 1, e);
        }
    }
    //iterative bSearch Impl

//    ~~~~~~~~~~~~NOT COMPLETE : ] ~~~~~~~~~~~~~~~~~

    public static void main(String[] args){
        int[] arr = {1,2,3,4,5,6,7,8};
        System.out.println(recursiveBSearch(2, arr, 0, arr.length));
    }
